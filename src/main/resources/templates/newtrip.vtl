          <option value="Moscow">Moscow</option>
          <option value="NYC">NYC</option>
          <option value="Orlando">Orlando</option>
          <option value="Sydney">Sydney</option>
          <option value="Tokyo">Tokyo</option>
        </select>
        <br>
      <input type="submit" value="Submit">
    </form>

